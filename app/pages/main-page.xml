        <ActionBar >
            <Label text="WELCOME" class="alignText font-weight-bold"/>
        </ActionBar>
    </Page.actionBar>
    <FlexboxLayout flexDirection="row" justifyContent="center" alignItems="center">
        <Button text="LOGIN" tap="{{ navigateToLogin }}" class="btn btn-primary btn-active roundButton view"/>
